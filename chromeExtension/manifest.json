{
  "name": "Heavy-Tire",
  "version": "1.0",
  "author": "xryuseix",
  "manifest_version": 2,
  "description": "フィッシングサイト検知システム",

  "browser_action": {
    "default_title": "Heavy-Tire",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}
